{
  "name": "BoilerPlates.Express_Postgres",
  "version": "1.0.0",
  "description": "This is the API server of BoilerPlates.Express_Postgres Application",
  "main": "src/server.js",
  "author": "The Wizard",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./build && npm run lint && babel src -d build --copy-files",
    "compose:dev-down": "docker compose -f docker-compose.dev.yml down -v",
    "compose:dev-up": "docker compose -f docker-compose.dev.yml up -d --build",
    "compose:prod-down": "docker compose -f docker-compose.prod.yml down -v",
    "compose:prod-up": "docker compose -f docker-compose.prod.yml up -d --build",
    "compose:test-down": "docker compose -f docker-compose.test.yml down -v --remove-orphans",
    "compose:test-up": "docker compose -f docker-compose.test.yml up -d --build --wait",
    "dev": "npm run lint && NODE_ENV=development nodemon -e js -w . --exec babel-node src/server.js",
    "format": "prettier . --write",
    "lint": "eslint --quiet . --ignore-pattern build/ --ignore-pattern test/",
    "lint-fix": "eslint --quiet . --fix",
    "pretest": "pnpm run compose:test-down && pnpm run compose:test-up",
    "test": "mocha --require @babel/register --file test/setup.js --recursive test/**/*.test.js --timeout 60000"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.624.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "nodemailer": "^6.9.14",
    "pg": "^8.12.0",
    "pg-hstore": "^2.3.4",
    "qs": "^6.14.0",
    "sequelize": "^6.37.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.8",
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/node": "^7.25.0",
    "@babel/preset-env": "^7.25.3",
    "@eslint/js": "^9.9.0",
    "axios": "^1.11.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "chai": "^4.3.10",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-babel-module": "^5.3.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "lint-staged": "^15.5.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,css,scss,json,html,graphql}": [
      "prettier --write"
    ]
  }
}
