    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "9.1.7",
    "lint-staged": "^15.5.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs,css,scss,json,html,graphql}": [
      "prettier --write"
    ]
  }
